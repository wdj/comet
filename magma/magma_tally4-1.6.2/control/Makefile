#      Univ. of Tennessee, Knoxville
#      Univ. of California, Berkeley
#      Univ. of Colorado, Denver
#      @date January 2015
#//////////////////////////////////////////////////////////////////////////////

DIR = control
MAGMA_tally4_DIR = ..
include $(MAGMA_tally4_DIR)/Makefile.internal

ZSRC := \
	magma_tally4_znan_inf.cpp	\
	zpanel_to_q.cpp	\
	zprint.cpp	\

ifeq ($(PGIFORTRAN), 0)
ZSRC += \
	magma_tally4_f77.cpp		\
	magma_tally4_param.f90		\
	magma_tally4.f90
else
ZSRC += \
	magma_tally4_zf77pgi.cpp
endif

# alphabetic order
SRC := \
	affinity.cpp		\
	auxiliary.cpp		\
	bulge_auxiliary.cpp	\
	connection_mgpu.cpp	\
	constants.cpp		\
	get_nb.cpp		\
	magma_tally4_threadsetting.cpp	\
	magma_tally4_timer.cpp		\
	magma_tally4winthread.cpp	\
	pthread_barrier.cpp	\
	strlcpy.cpp		\
	thread_queue.cpp	\
	trace.cpp		\
	xerbla.cpp		\
	sqrt.cpp	\
# ilaenv was previously used by gesdd; it was the only required Fortran dependence
#	ilaenv_f77.f		\
#	ilaenv.cpp		\

# Fortran wrappers are generated by 'make wrappers'
# They don't directly use precision generation;
# the headers that they are generated from use precision generation.
SRC += \
	magma_tally4_sf77.cpp		\
	magma_tally4_df77.cpp		\
	magma_tally4_cf77.cpp		\
	magma_tally4_zf77.cpp		\
	magma_tally4_sfortran.F90	\
	magma_tally4_dfortran.F90	\
	magma_tally4_cfortran.F90	\
	magma_tally4_zfortran.F90	\

-include Makefile.local
-include Makefile.src

ALLSRC := $(ZSRC) $(CSRC) $(DSRC) $(SSRC) $(SRC)

ALLOBJ := $(ALLSRC:.cpp=.o)
ALLOBJ := $(filter %.o, $(ALLOBJ))

FOBJ   := $(ALLSRC:.f90=.o)
FOBJ   := $(FOBJ:.F90=.o)
FOBJ   := $(FOBJ:.f=.o)
FOBJ   := $(filter %.o, $(FOBJ))

ifneq ($(FORT),no_fortran)
    ALLOBJ += $(FOBJ)
endif

.PHONY: all clean cleanall

.DEFAULT_GOAL := all
all: $(LIBMAGMA_tally4)

$(LIBMAGMA_tally4): $(ALLOBJ) stamp
	$(ARCH) $(ARCHFLAGS) $@ $(ALLOBJ)
	$(RANLIB) $@
	-cp *.mod ../include

# this forces LIBMAGMA_tally4 to be archived
stamp: $(ALLOBJ)
	touch $@

clean:
	rm -f *.cu_o *.o *~ *.linkinfo *.mod ../include/*.mod sizeptr stamp

cleanall: clean
	rm -f $(LIBMAGMA_tally4)

wrappers: ../include/magma_tally4_s.i ../include/magma_tally4_d.i ../include/magma_tally4_c.i ../include/magma_tally4_z.i
	../tools/fortran_wrappers.pl ../include/magma_tally4_s.i
	../tools/fortran_wrappers.pl ../include/magma_tally4_d.i
	../tools/fortran_wrappers.pl ../include/magma_tally4_c.i
	../tools/fortran_wrappers.pl ../include/magma_tally4_z.i
	rm $^

# Extra dependencies for .mod files
magma_tally4.o: magma_tally4_zfortran.o magma_tally4_cfortran.o magma_tally4_dfortran.o magma_tally4_sfortran.o 
magma_tally4_zfortran.o: magma_tally4_param.o
magma_tally4_cfortran.o: magma_tally4_param.o
magma_tally4_dfortran.o: magma_tally4_param.o
magma_tally4_sfortran.o: magma_tally4_param.o
